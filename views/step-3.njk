{% extends "govuk/template.njk" %}

{% block pageTitle %}
Step 3 – Licence number – Renew your driving licence – GOV.UK
{% endblock %}

{% block content %}
  <form method="post" action="/step-3">
    <h1 class="govuk-heading-l">What is your driving licence number?</h1>
    <div class="govuk-form-group">
      <label class="govuk-label" for="licenceNumber">Licence number</label>
      <input class="govuk-input" id="licenceNumber" name="licenceNumber" type="text" required>
    </div>
    <button class="govuk-button" type="submit">Continue</button>
  </form>
{% endblock %} 
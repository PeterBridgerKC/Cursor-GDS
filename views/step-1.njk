{% extends "govuk/template.njk" %}

{% block pageTitle %}
Step 1 – Full name – Renew your driving licence – GOV.UK
{% endblock %}

{% block content %}
  <form method="post" action="/step-1">
    <h1 class="govuk-heading-l">What is your full name?</h1>
    <div class="govuk-form-group">
      <label class="govuk-label" for="fullName">Full name</label>
      <input class="govuk-input" id="fullName" name="fullName" type="text" autocomplete="name" required>
    </div>
    <button class="govuk-button" type="submit">Continue</button>
  </form>
{% endblock %} 